<h1>Fan Power</h1>
<div class="slidecontainer">
  <input type="range" min="0" max="1" value="0.5" step="any" class="slider" id="fanPowerSlider">
</div>
<h1>Valve Position</h1>
<div class="slidecontainer">
  <input type="range" min="0" max="180" value="90" step="any" class="slider" id="valvePositionSlider">
</div>
<h1>Light Brightness</h1>
<div class="slidecontainer">
  <input type="range" min="0" max="1" value="0.5" step="any" class="slider" id="lightBrightnessSlider">
</div>
